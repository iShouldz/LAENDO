<style>
    .custom-card-margin {
        margin-left: 15rem; /* Altere o valor conforme necessário */
        margin-right: 15rem; /* Altere o valor conforme necessário */
    }
    .texta{
        text-align: justify;
        padding-left: 20px;
    }
    .btn-custom-primary {
        background-color: rgba(69,1,0,1);
        border-color: rgba(69,1,0,1);
    }
    .btn-custom-primary:hover {
        background-color: rgba(50,1,0,1); /* Cor alternativa ao passar o mouse */
        border-color: rgba(50,1,0,1);
    }
    .text-gold {
        color: gold;
    }
    .text-gold:hover {
        color: white;
    }
    .custom-card-padding {
        padding: 10px; /* Ajuste o valor conforme necessário */
        margin-left: 20px;
        margin-right: 20px;
    }

</style>

<p style="color: green"><%= notice %></p>

<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="text-center mt-4 mb-3">Publicações!</h1>
    <hr class="my-4 h-auto">

  </div>
</div>

<div id="posts" class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div id="<%= dom_id post %>" class="card mt-4 text-center custom-card-padding">
        <div class="card-body">
          <h5 class="card-title" style="font-size: 30px; font-style: normal"><%= post.title %></h5>
          <p class="card-text" style="font-size: 12px; font-style: italic">Por: <%= post.author %></p>
          <p class="card-text">Resumo: <%= post.summary %></p>
          <p class="card-text">Tags: <strong><%= post.tags %></strong></p>

          <div class="text-center">
            <%= link_to "Ler mais", post, class: "btn btn-custom-primary text-gold" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



<div class="text-center">
  <br>
  <%= link_to "Novo post", new_post_path, class: "btn btn-custom-primary text-gold text-center" %>
  <%= link_to "Pagina inicial", home_index_path,  class: "btn btn-custom-primary text-gold" %>
</div>
