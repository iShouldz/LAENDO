<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control', required: true, autofocus: true, autocomplete: 'email' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control', required: true, autocomplete: 'current-password' %>
            </div>

            <div class="form-group">
              <%= f.input :remember_me, as: :boolean, label: 'Remember me' if devise_mapping.rememberable? %>
            </div>

            <div class="form-group text-center">
              <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
